{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Candidate Profile",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "surname": { "type": "string" },
    "email": { "type": "string", "format": "email" },
    "phone_number": { "type": "string" },
    "linkedin_profile": { "type": "string", "format": "uri" },
    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "school_name": { "type": "string" },
          "start_year": { "type": "integer" },
          "end_year": { "type": "integer" },
          "field_of_study": { "type": "string" }
        },
        "required": ["school_name", "start_year", "end_year", "field_of_study"],
        "additionalProperties": false
      },
      "uniqueItems": true
    },
    "experience": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "company_name": { "type": "string" },
          "start_year": { "type": "integer" },
          "end_year": { "type": "integer" },
          "position": { "type": "string" }
        },
        "required": ["company_name", "start_year", "end_year", "position"],
        "additionalProperties": false
      },
      "uniqueItems": true
    },
    "skills": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "category": { "type": "string" },
          "proficiency": { "type": "number", "minimum": 1, "maximum": 5 }
        },
        "required": ["name", "category"],
        "additionalProperties": false
      },
      "uniqueItems": true
    }
  },
  "required": ["name", "surname", "email", "phone_number"],
  "additionalProperties": false
}
